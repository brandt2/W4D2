<form action="<%=cat_url(@cat)%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name: 
    <input type="text" name="cat[name]" value="<%= @cat.name%>">
  </label>
  <br>

  <label for="birth_date">Date of Birth:  
    <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date%>">
  </label>
  <br>

  <label for="color">Color: 
    <select name="cat[color]">
      <option value="" disabled <%= @cat.color ? "" : "selected"%>> --Select a color-- </option>
      <% CAT_COLORS.each do |color| %>
        <option value="<%= color %>" <%= @cat.color == color ? "selected" : ""%>>
        <%= color %> </option>
      <% end %>
    </select>
  </label>
  <br>

  <label for="sex">Sex: 
    <input type="radio" name="cat[sex]" value="F" <%= @cat.sex == 'F' ? "checked" : "" %>> F
    <input type="radio" name="cat[sex]" value="M" <%= @cat.sex == 'M' ? "checked" : "" %>> M
  </label>
  <br>

  <label for="description">Description: 
    <textarea name="cat[description]">
      <%= @cat.description ? @cat.description : "" %>
    </textarea>
  </label>
  <br>

  <input type="submit" value="Please click me">
</form>