<form action="<%=cats_url%>" method="POST">
  <label for="name">Name: 
    <input type="text" name="cat[name]">
  </label>
  <br>
  <label for="birth_date">Date of Birth:  
    <input type="date" name="cat[birth_date]">
  </label>
  <br>
  <label for="color">Color: 
    <select name="cat[color]">
      <option value="" disabled selected>Select a color</option>
      <% CAT_COLORS.each do |color| %>
        <option value="<%= color %>"><%= color %></option>
      <% end %>
    </select>
  </label>
  <br>
  <label for="sex">Sex: 
    <input type="radio" name="cat[sex]" value="F"> F
    <input type="radio" name="cat[sex]" value="M"> M
  </label>
  <br>
  <label for="description">Description: 
    <textarea name="cat[description]">
    </textarea>
  </label>
  <br>
  <input type="submit" value="Please click me">
</form>